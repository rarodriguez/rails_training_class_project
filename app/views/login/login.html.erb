<h1>Login</h1>

<% form_for @employee_session, :url => submit_employee_session_path do |f| %>
  
  <%= render 'share/error_messages', :object =>@employee_session %>
  <%= f.label :email %><br />
  <%= f.text_field :email %><br />
  <br />
  <%= f.label :password %><br />
  <%= f.password_field :password %><br />
  <br />
  <%= f.check_box :remember_me %><%= f.label :remember_me %><br />
  <br />
  <%= f.submit "Login" %>
<% end %>